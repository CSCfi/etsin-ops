
# ALIASES TO USE FOR DEVELOPMENT

# Generally useful
alias aliases='cat ~/.bash_aliases'
alias finder_src='cd {{ web_app_base_path }}'
alias search_src='cd {{ search_app_base_path }}'
alias source_pyenv='source {{ python_virtualenv_path }}/bin/activate'
alias install_finder_requirements='finder_src && source_pyenv && pip install -r requirements.txt && pip install -r test_requirements.txt && cd -'
alias install_search_requirements='search_src && source_pyenv && pip install -r requirements.txt && cd -'
alias tail_finder_log='tail -f -n 200 {{ web_app_log_base_path }}/{{ web_app_project_name }}.log'
alias tail_search_log='tail -f -n 200 {{ search_app_log_base_path }}/{{ search_app_project_name }}.log'
alias run_finder_flake8_and_tests='finder_src && source_pyenv && tox -e etsin_pyenv && cd -'
alias run_search_flake8='search_src && source_pyenv && flake8 .'
alias runserver='finder_src && {{ python_virtualenv_path }}/bin/gunicorn --bind unix:{{ nginx_gunicorn_socket_path }} --access-logfile - --error-logfile - --config /etc/gunicorn.py --reload etsin_finder.finder:app'
alias npmwatch='cd {{ web_app_frontend_path }} && npm run watch'
alias delete_index='{{ search_app_scripts_path }}/delete_index.sh'
alias create_index='{{ search_app_scripts_path }}/create_empty_index.sh'
alias load_test_data_to_index='{{ search_app_scripts_path }}/load_test_data_to_index.sh'
alias run_search_tests='cd {{ search_app_base_path }} && pytest --cov=etsin_finder_search tests/ && cd -'
alias run_frontend_tests='cd {{ web_app_frontend_path }} && npm run test && cd -'
alias run_frontend_lint='cd {{ web_app_frontend_path }} && npm run lint && cd -'
alias run_frontend_npm_prune='cd {{ web_app_frontend_path }} && npm prune'
alias run_frontend_npm_install='cd {{ web_app_frontend_path }} && npm install'
alias run_frontend_npm_dev_build='cd {{ web_app_frontend_path }} && npm run dev-build'
alias run_frontend_npm_watch='cd {{ web_app_frontend_path }} && npm run watch'
